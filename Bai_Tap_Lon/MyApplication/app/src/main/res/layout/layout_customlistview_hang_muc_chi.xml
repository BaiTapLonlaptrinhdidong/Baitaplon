<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/custom_square_nobder">

        <ImageView
            android:id="@+id/imgTitle_listview_hang_muc_chi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="3dp"/>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtLisview_title_hang_muc_chi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:paddingTop="10dp"
                android:padding="5dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgListview_hang_muc_chi"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@mipmap/intend"/>

    </LinearLayout>

</LinearLayout>